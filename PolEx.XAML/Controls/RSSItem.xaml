<UserControl x:Class="PolEx.XAML.Controls.RSSItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:PolexControls ="clr-namespace:PolEx.XAML.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid Margin="0,10">
        <Label Name="lblTitle" Content="Title" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <!--<TextBlock Name="lblContent" Text="Content" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>-->
        <RichTextBox Name="lblContent" IsReadOnly="True" HorizontalAlignment="Left" Margin="5,30,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
